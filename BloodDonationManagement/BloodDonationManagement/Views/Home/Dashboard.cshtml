@using BloodDonation.DTO.Donor;
@model DonorDetails;

@{
    ViewData["Title"] = "Dashboard";
}

<link href="~/css/dashboard.css" rel="stylesheet" />

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">
                        @Model.DonorName
                    </h3>
                    <h6 class="theme-color lead">YOU ARE NOW A LIFE SAVER</h6>
                    <span>
                        I am very supportive person and i am very grateful that i am fit thats why i donate
                        myblood and be saviour for someones life
                    </span>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Name</label>
                                <p>@Model.DonorName</p>
                            </div>
                            <div class="media">
                                <label>Gender</label>
                                <p>
                                    @Model.DonorGender
                                </p>
                            </div>
                            <div class="media">
                                <label>Blood group</label>
                                <p>
                                    @Model.DonorBloodGrp
                                </p>
                            </div>
                            <div class="media">
                                <label>Address</label>
                                <p>
                                    @Model.DonorAddress
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>G-mail</label>
                                <p>
                                    @Model.DonorEmail
                                </p>
                            </div>
                            <div class="media">
                                <label>Phone</label>
                                <p>
                                    @Model.DonorMobile
                                </p>
                            </div>
                            <div class="media">
                                <label>DOB</label>
                                <p>
                                    @Model.DonorDob
                                </p>
                            </div>

                            <div class="media">
                                <label>Date(last blood donation)</label>
                                <p>
                                    12-12-2000
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
        <div class="counter">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <p class="count">
                            1 Time
                        </p>
                        <p class="m-0px font-w-600">how much time donate the blood</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <p class="count">
                            1Point
                        </p>
                        <p class="m-0px font-w-600">how much blood donate</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <p class="count">
                            12-12-2000
                        </p>
                        <p class="m-0px font-w-600">blood donation time</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <p class="count">
                            12-12-2000
                        </p>
                        <p class="m-0px font-w-600">next date of donation</p>
                    </div>
                </div>
            </div>
        </div>

        <br>
        <center>
            <span style="color: red; " id="donatespan">
                YOU CANNOT
                DONATE
                YOUR
                BLOOD
                BEFORE 3 MONTHS
            </span>
        </center>

        <center>
            <h3>YOU CAN DONATE BLOOD</h3>
        </center>

        <!-- BUTTON TO GO TO BACK TO HOME PAGE  -->
        <br>
        <center>
            <a class="btn btn-primary" asp-action="Index" asp-controller="Home">
                BACK TO
                HOME
            </a>
        </center>

        <!-- BUTTON TO AVAIL BLOOD  -->
        <br>
        <center>
            <a class="btn btn-success">Avail Blood</a>
        </center>
    </div>
</section>