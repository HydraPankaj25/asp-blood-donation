@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BloodDonationManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/site1.css" rel="stylesheet" />


    @* using font *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lemon&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="background-color:#f6f6f6;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/websiteimages/images.png" class="mainHeaderImage" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between navigation">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">ABOUT</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="GroupMember">GROUP MEMBER</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Organisation">AFFILIATE ORGANIZATION</a>
                        </li>
                        @if (@HttpContextAccessor?.HttpContext?.Request.Cookies["UserToken"] != null)
                        {
                            <li class="nav-item m-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">DASHBOARD</a>
                            </li>
                        }
                    </ul>
                    @if (@HttpContextAccessor?.HttpContext?.Request.Cookies["UserToken"] == null)
                    {
                        <ul class="navbar-nav flex-grow">
                            <li class="nav-item m-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                            </li>

                            <li class="nav-item dropdown mt-2">
                                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Login
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="Login" asp-controller="Home">User</a></li>
                                    <li><a class="dropdown-item" asp-action="Login" asp-controller="Home">Doctor</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow">
                            <li class="nav-item dropdown mt-2">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTpb61YIcJ6oEkVs-EhoPDQqv_f6Zkwv9Lgtw&usqp=CAU" class="rounded-circle border border-1" style="height:45px;width:45px;" alt="sorry!" />
                            </li>
                            <li class="nav-item dropdown mt-2">
                                <a class="nav-link dropdown-toggle text-dark fw-bold" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @HttpContextAccessor?.HttpContext?.Request.Cookies["UserName"]
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Admin">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>


    @* body start here *@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* body end here *@



    <!--footer part start here-->
    <footer>
        <div class="mid">
            <p><span>NOTICE: </span> Any blood availibilty query or any need contact 017176626487</p>
            <a href="#"> Click for blood in case of emergency or contact us on above number</a>
        </div>
    </footer>
    <!--footer part end here-->
    <!--footer2 part start here-->
    <div class="footer">
        <div class="mid">
            <p>&copy 2024-2025 ।। All Right Reserved Design By PANKAJ MISHRA</p>
        </div>
    </div>
    <!--footer2 part end here-->
    @* All scripts file links are here *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/fontawesome.min.js"></script>
    <script src="~/lib/font-awesome/js/fontawesome.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf");
</body>
</html>
